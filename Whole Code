<body>

    <div class="container">
        <h1>To-Do List</h1>
        <div class="input-container">
            <input type="text" id="taskInput" placeholder="Add a new task..." />
            <button class="add-button" onclick="addTask()">Add</button>
        </div>
        <ul id="taskList"></ul>
    </div>

    <script>
        function addTask() {
            const taskInput = document.getElementById('taskInput');
            const taskValue = taskInput.value.trim();
            if (taskValue === '') return;

            const taskList = document.getElementById('taskList');
            const li = document.createElement('li');

            li.innerHTML = `
                <span class="task-text" onclick="toggleCompletion(this)">${taskValue}</span>
                <button class="delete-button" onclick="removeTask(this)">âœ–</button>
            `;
            taskList.appendChild(li);
            taskInput.value = '';
        }

        function toggleCompletion(task) {
            task.classList.toggle('completed');
        }

        function removeTask(button) {
            const taskList = document.getElementById('taskList');
            taskList.removeChild(button.parentElement);
        }
    </script>

</body>
</html>
